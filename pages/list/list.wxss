/* pages/list/list.wxss */
.listcontainer{
  background-color: #dddddd;
}
.banners {
  width: 100%;
  height: 200px;
  background-color: #ffffff;
}

.banner{
  position: relative;
}

.banner-image{
  width: 100%;
  height: 100%;
}

.item-header{
  margin: 12px;
  color: chartreuse;
}
.news-item{
  display: flex;
  column-count: 2;
  margin: 20px;
  background-color: #ffffff;
}

.news-item-title{
  font-size: 16px;
}

.news-item-left{
  margin-top: 20px;
  margin-left: 12px;
  width: 80px;
  height: 80px;
  background-color: #eeeeee;
}

.news-item-right{
  margin: 12px;
}
.item-image{
  width: 80px;
  height: 80px;
}
